<div class ="container my-5">
  <div class ="row">
    <div class ="card col-12">
      <h4 class ="card-header">ユーザー詳細</h4>
      <%= form_with model: @user,url: admin_user_path(@user.id),method: :patch ,local: true do |f| %>
        <div class ="col-10 offset-1">
          <table class ="table table-borderless">
            <tr>
              <td>名前</td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td>生年月日</td>
              <td><%= @user.birthday.strftime("%Y年%m月%d日") %></td>
            </tr>
            <tr>
              <td>性別</td>
              <td><%= @user.show_gender %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td>
                <div class ="form-check form-check-inline">
                  <%= f.radio_button :is_active ,"true" ,class: "form-check-input"%>
                  <%= f.label "会員" ,class: "form-check-label"%>
                </div>
                <div class ="form-check form-check-inline">
                  <%= f.radio_button :is_active ,"false" ,class: "form-check-input"%>
                  <%= f.label "退会済" ,class: "form-check-label"%>
                </div>
              </td>
            </tr>
          </table>
        </div>

        <div class ="text-center mb-5">
          <%= f.submit "変更する" ,class: "btn btn-danger mr-5"%>
          <%= link_to "レシピ一覧",admin_user_recipe_path(@user.id),class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
