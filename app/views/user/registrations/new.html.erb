<div class ="container">
  <div class ="row" >
    <div class ="card col-12 pb-5 m-5">
      <h4 class ="card-header">新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
        <table class ="table table-borderless col-10 offset-1 my-5">
          <tr>
            <td>メールアドレス</td>
            <td class ="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td class ="form-group">
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control w-50" %>
            </td>
          </tr>
          <tr>
            <td>パスワード(再入力)</td>
            <td class ="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control w-50" %>
            </td>
          </tr>
          <tr>
            <td>表示名</td>
            <td class="form-group"> <%= f.text_field :name ,class: "form-control w-50"%></td>
          </tr>
          <tr>
            <td>生年月日</td>
            <td class ="form-group"><%= f.date_field :birthday ,use_month_numbers: true, start_year: 1950, end_year: (Time.now.year - 15),value: Date.new(2000,1,1) ,class: "form-control w-50"%></td>
          </tr>
          <tr>
            <td>性別</td>
            <td>
              <div class ="form-check form-check-inline">
                <%= f.radio_button :gender ,"male", class: "form-check-input",checked: "checked" %> <%= f.label :gender, "男性" ,class: "form-check-label"%>
              </div>
              <div class ="form-check form-check-inline">
                <%= f.radio_button :gender ,"female", class: "form-check-input" %> <%= f.label :gender, "女性",class: "form-check-label"%>
              </div>
            </td>
          </tr>
        </table>
        <div class ="text-center">
          <span><mark>登録する前に内容を今一度ご確認ください</mark></span><br>
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

