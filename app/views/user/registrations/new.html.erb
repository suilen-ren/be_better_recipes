<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %>
    <% if @minimum_password_length %>
    <span>(<%= @minimum_password_length %>文字以上,英数字)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(再入力)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class ="field">
    <%= f.label '表示名' %><br />
    <%= f.text_field :name %>
  </div>
  <div class ="field">
    <%= f.label "性別" %> <br />
    <%= f.radio_button :gender , "male" %> <span>男性</span>
    <%= f.radio_button :gender , "female" %> <span>女性</span>
  </div>

  <div class ="field">
    <%= f.label "生年月日" %><br />
    <%= f.date_select :birthday ,use_month_numbers: true, start_year: 1950, end_year: (Time.now.year - 15),default: Date.new(2000,1,1) %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "user/shared/links" %>
